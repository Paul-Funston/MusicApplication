@model IEnumerable<MusicApplication.Models.Album>

@{
    ViewData["Title"] = "Index";
}

<h1>Albums</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                <a asp-controller="Songs" asp-action="Index" asp-route-id="@item.Id">Songs</a> 
            </td>
        </tr>
}
    </tbody>
</table>
